<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="@dimen/navheader_height"
android:background="@color/colorblue"
android:gravity="bottom"
android:orientation="vertical"
android:padding="@dimen/size10dp" >
<TextView android:id="@+id/txt_titulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:drawableStart="@mipmap/ic_launcher"
    android:drawablePadding="12dp"
    android:gravity="center_vertical"
    android:text="@string/app_name"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium.Inverse" />

<TextView android:id="@+id/txt_subtitulo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/size10dp"
    android:text="Daniel Medina - daniel medina . com"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse" />

</LinearLayout>